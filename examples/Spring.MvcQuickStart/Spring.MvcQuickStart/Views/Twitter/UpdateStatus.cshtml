@using Spring.Social.Twitter.Api;
@model IList<Spring.Social.Twitter.Api.Tweet>
@{
    ViewBag.Title = "Update Twitter's status";
}

<h2>Twitter</h2>
<p>
    Update your Twitter's status.
</p>

@using (Html.BeginForm()) {
    <div>
        <input type="text" name="status" />
        <input type="submit" value="Tweet" />
    </div>
}
<br />
<table>
    @foreach (Tweet tweet in Model)
    {
    <tr>
        <td>
            <img src="@tweet.ProfileImageUrl" alt="@tweet.FromUser"/>
        </td>
        <td>
            <table>
                <tr>
                    <td>
                        &#64;@tweet.FromUser (@tweet.CreatedAt.Value)
                    </td>
                </tr>
                <tr>
                    <td>
                        @tweet.Text
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    }
</table>

